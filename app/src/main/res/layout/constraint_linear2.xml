<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/view1.2"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#FF002F"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/view2.2"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="2"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#FF0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1.2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/view3.2"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:text="3"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#29B6F6"
        app:layout_constraintTop_toBottomOf="@id/view1.2"
        app:layout_constraintLeft_toRightOf="@id/view2.2"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/view4.2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#C6A9C3"
        app:layout_constraintTop_toBottomOf="@id/view3.2"
        app:layout_constraintLeft_toRightOf="@id/view2.2"
        app:layout_constraintRight_toLeftOf="@id/view5.2"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/view5.2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#A31794"
        app:layout_constraintTop_toBottomOf="@id/view3.2"
        app:layout_constraintLeft_toRightOf="@id/view4.2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>