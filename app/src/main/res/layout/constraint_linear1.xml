<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/viewA"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#f00"
        android:text="A"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/viewB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/viewB"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#207C2F"

        android:text="B"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/viewA"
        app:layout_constraintBottom_toTopOf="@id/viewC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/viewC"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#A6A637"

        android:text="C"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewB"
        app:layout_constraintBottom_toTopOf="@id/viewD"/>
    <TextView
        android:id="@+id/viewD"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#0004FF"
        android:text="D"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/viewC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/viewA1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D8D885"
        app:layout_constraintTop_toBottomOf="@id/viewD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/viewB1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="A"
        android:textSize="25sp"/>
    <TextView
        android:background="#83837B"
        android:id="@+id/viewB1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/viewD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/viewA1"
        app:layout_constraintRight_toLeftOf="@id/viewC1"
        android:text="B"
        android:textSize="25sp"/>
    <TextView
        android:background="#7E57C2"

        android:id="@+id/viewC1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/viewD"
        app:layout_constraintLeft_toRightOf="@id/viewB1"
        app:layout_constraintRight_toLeftOf="@id/viewD1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="C"
        android:textSize="25sp"/>
    <TextView
        android:background="#8F2C76"

        android:id="@+id/viewD1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/viewD"
        app:layout_constraintLeft_toRightOf="@id/viewC1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="D"
        android:textSize="25sp"/>
</android.support.constraint.ConstraintLayout>